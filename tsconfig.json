{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs", 
    "moduleResolution": "node",                   
    "lib": ["es6"],                     
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",                          
    "rootDir": "src",       
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}